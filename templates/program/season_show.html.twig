{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <h1>Saison {{ season.number }} de {{ program.title }}</h1>
        <p>{{ season.description }}</p><br>
        <p>{{ 'episodes.list'|trans }}</p>
        <ul>
            {% for episode in episodes %}
                <li><a href="{{ path("program_episode_show", { program_slug: program.slug, season: season.id, episode_slug: episode.slug }) }}">{{ episode.title }}</a></li>
            {% endfor %}
        </ul>
        <a href="{{ path("program_show", { slug: program.slug }) }}">{{ 'back.plug'|trans }}</a>
    </section>
{% endblock %}