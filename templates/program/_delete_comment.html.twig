<form method="post" action="{{ path('program_delete_comment', {'id': comment.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer un commentaire?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn btn-secondary">{{ delete|trans }}</button>
</form>
