{% extends 'base.html.twig' %}

{% block body %}
    <h2>{{ 'actor'|trans }}  {{ actor.name }}:</h2>
    <img class="poster" src="{{ asset('uploads/' ~ actor.pictureFile) }}" alt="{{ actor.name }} poster">
    <ul>
        {% for program in programs %}
            <a href="{{ path("program_show", { slug: program.slug }) }}" class="btn btn-secondary">retour
            </a>
        {% endfor %}
    </ul>
{% endblock %}